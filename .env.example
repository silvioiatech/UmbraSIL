# Required Settings
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
ALLOWED_USER_IDS=your_telegram_user_id

# Optional Features (set to false if not using)
ENABLE_FINANCE=true
ENABLE_BUSINESS=false
ENABLE_MONITORING=true
ENABLE_AI=false
ENABLE_BI=false

# Optional API Keys (leave empty if not using)
OPENAI_API_KEY=
CLAUDE_API_KEY=
OPENROUTER_API_KEY=
VPS_HOST=
VPS_USERNAME=
VPS_PASSWORD=

# NLP Model Configuration (OpenRouter models)
# Default: free models, can be changed to any OpenRouter model
NLP_INTENT_MODEL=meta-llama/llama-3.2-3b-instruct:free
NLP_EXTRACTION_MODEL=mistralai/mistral-7b-instruct:free
NLP_ANALYSIS_MODEL=anthropic/claude-3-haiku
NLP_CHAT_MODEL=meta-llama/llama-3.2-3b-instruct:free

# System Settings
LOG_LEVEL=INFO
DEFAULT_CURRENCY=EUR
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=85
