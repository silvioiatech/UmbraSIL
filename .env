# ==============================================================================
# UmbraSIL Bot - Environment Configuration for Railway Deployment
# ==============================================================================
# This file serves as an example of all possible environment variables.
# Copy this file as your actual .env and update the values for your deployment.

# ==============================================================================
# CORE CONFIGURATION (Required)
# ==============================================================================

# Telegram Bot Token - Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Your Telegram User ID - Get from @userinfobot or @my_id_bot
ALLOWED_USER_IDS=123456789

# Secret key for encryption and sessions - Generate a strong random key
SECRET_KEY=your-super-secret-key-change-this-in-production

# Environment mode
ENVIRONMENT=production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# RAILWAY SPECIFIC SETTINGS
# ==============================================================================

# Railway automatically provides these, but you can override if needed
# PORT=8000
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your-project-id
# RAILWAY_SERVICE_ID=your-service-id

# ==============================================================================
# FEATURE FLAGS (Enable/Disable Modules)
# ==============================================================================

ENABLE_FINANCE=true
ENABLE_BUSINESS=true
ENABLE_MONITORING=true
ENABLE_AI=true
ENABLE_BI=true
ENABLE_VPS_MANAGEMENT=true
ENABLE_VOICE=true
ENABLE_WEB_INTERFACE=true
ENABLE_ANALYTICS=true

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# Railway PostgreSQL (automatically provided by Railway if you add PostgreSQL service)
# DATABASE_URL=postgresql://user:password@host:port/database
# Alternatively, set individual components:
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=umbrasil
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_password

# ==============================================================================
# AI MODULE CONFIGURATION
# ==============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# AI Behavior Settings
AI_MAX_CONTEXT_MESSAGES=20
AI_CONTEXT_EXPIRY=3600
AI_MEMORY_TTL=86400
AI_MAX_REQUESTS_PER_MIN=20
AI_COOLDOWN_PERIOD=60

# Voice Processing
VOICE_RECOGNITION_ENABLED=true
VOICE_MAX_LENGTH=300
VOICE_MODEL=whisper-1

# ==============================================================================
# FINANCE MODULE CONFIGURATION
# ==============================================================================

# Google Cloud Vision for receipt scanning
GOOGLE_CREDENTIALS_JSON=base64_encoded_service_account_json_here

# Alternative: individual Google Cloud settings
# GOOGLE_PROJECT_ID=your-project-id
# GOOGLE_PRIVATE_KEY_ID=your-key-id
# GOOGLE_PRIVATE_KEY=your-private-key
# GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
# GOOGLE_CLIENT_ID=your-client-id

# Finance Settings
DEFAULT_CURRENCY=EUR
RECEIPT_STORAGE_PATH=data/receipts

# Exchange Rate API (optional)
EXCHANGE_RATE_API_KEY=your_exchange_rate_api_key

# ==============================================================================
# BUSINESS MODULE CONFIGURATION
# ==============================================================================

# VPS/Server Management
VPS_HOST=your.vps.ip.or.hostname
VPS_PORT=22
VPS_USERNAME=your_vps_username
VPS_PASSWORD=your_vps_password
VPS_PRIVATE_KEY=base64_encoded_private_key_here

# Alternative SSH Key file path (if not using base64)
# VPS_KEY_FILE=/path/to/your/private/key

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_NETWORK=n8n_network
DOCKER_IMAGE=n8nio/n8n:latest

# N8N Configuration
N8N_BASE_PORT=5678
N8N_MAX_CLIENTS=10
N8N_DEFAULT_PASSWORD=your_n8n_password

# ==============================================================================
# MONITORING MODULE CONFIGURATION
# ==============================================================================

# System Monitoring Thresholds
CPU_THRESHOLD=80
MEMORY_THRESHOLD=80
DISK_THRESHOLD=85
NETWORK_THRESHOLD=100

# Monitoring Intervals (seconds)
METRICS_INTERVAL=300
ALERT_CHECK_INTERVAL=60
HEALTH_CHECK_INTERVAL=30

# Alerts Configuration
ENABLE_EMAIL_ALERTS=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Webhook Alerts
WEBHOOK_ALERT_URL=https://your-webhook-url.com/alerts

# ==============================================================================
# BUSINESS INTELLIGENCE CONFIGURATION
# ==============================================================================

# Google Sheets Integration
GOOGLE_SHEETS_CREDENTIALS=base64_encoded_service_account_json_here
GOOGLE_SHEETS_ID=your_google_sheet_id

# Analytics Database (if different from main database)
ANALYTICS_DATABASE_URL=your_analytics_database_url

# ==============================================================================
# WEB INTERFACE CONFIGURATION
# ==============================================================================

# Web Dashboard Settings
WEB_INTERFACE_ENABLED=true
WEB_PORT=8000
WEB_HOST=0.0.0.0

# Authentication for web interface
WEB_ADMIN_USERNAME=admin
WEB_ADMIN_PASSWORD=your_web_admin_password

# JWT Settings for web auth
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
HASH_SALT=your_hash_salt_string

# ==============================================================================
# EXTERNAL SERVICES CONFIGURATION
# ==============================================================================

# Telegram Channel/Group Integration
TELEGRAM_CHANNEL_ID=@your_channel_or_group_id
TELEGRAM_NOTIFICATIONS_ENABLED=true

# External APIs
WEATHER_API_KEY=your_weather_api_key
NEWS_API_KEY=your_news_api_key

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# ==============================================================================
# DEVELOPMENT/TESTING CONFIGURATION
# ==============================================================================

# Development Mode Settings (only used when ENVIRONMENT=development)
DEV_WEBHOOK_URL=https://your-ngrok-url.ngrok.io
DEV_AUTO_RELOAD=true
DEV_LOG_LEVEL=DEBUG

# Testing
TEST_TELEGRAM_BOT_TOKEN=your_test_bot_token
TEST_USER_ID=your_test_user_id

# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================

# Memory and Performance
PYTHON_MAX_MEMORY_MB=512
WORKER_PROCESSES=1
ASYNC_POOL_SIZE=10

# Caching
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# ==============================================================================
# BACKUP AND RECOVERY
# ==============================================================================

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups

# ==============================================================================
# NOTES FOR RAILWAY DEPLOYMENT
# ==============================================================================
# 
# 1. Set TELEGRAM_BOT_TOKEN and ALLOWED_USER_IDS as minimum requirements
# 2. Enable desired features by setting ENABLE_* flags to true
# 3. Add corresponding API keys/credentials for enabled features
# 4. Railway will automatically set PORT and some environment variables
# 5. For PostgreSQL, add the service in Railway and it will set DATABASE_URL
# 6. Use Railway's environment variable interface to set these values
# 7. Keep sensitive values secure - don't commit actual credentials to git
#
# ==============================================================================
